# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           com.lucidchart.open.nark.controllers.HomeController.index

# authentication
GET     /login                      com.lucidchart.open.nark.controllers.AuthController.openidLogin
GET     /logout                     com.lucidchart.open.nark.controllers.AuthController.logout
GET     /openid-callback            com.lucidchart.open.nark.controllers.AuthController.openidCallback

# Dashboards
GET     /dashboard/create           com.lucidchart.open.nark.controllers.DashboardsController.create
POST    /dashboard/create           com.lucidchart.open.nark.controllers.DashboardsController.createSubmit
GET     /dashboard/edit/:uuid       com.lucidchart.open.nark.controllers.DashboardsController.edit(uuid: String)
GET     /dashboard/:url             com.lucidchart.open.nark.controllers.DashboardsController.dashboard(url: String)
GET     /dashboard/toggle/:uuid     com.lucidchart.open.nark.controllers.DashboardsController.toggleActivation(uuid: String)

# Graphs
GET     /graph/:dashboardId/add     com.lucidchart.open.nark.controllers.GraphsController.add(dashboardId: String)
POST    /graph/:dashboardId/add     com.lucidchart.open.nark.controllers.GraphsController.addSubmit(dashboardId: String)
GET     /graph/list/:dashboardId    com.lucidchart.open.nark.controllers.GraphsController.list(dashboardId: String)
GET     /graph/toggle/:uuid         com.lucidchart.open.nark.controllers.GraphsController.toggleActivation(uuid: String)

# Targets
GET     /target/:graphId/add        com.lucidchart.open.nark.controllers.TargetsController.add(graphId: String)
POST    /target/:graphId/add        com.lucidchart.open.nark.controllers.TargetsController.addSubmit(graphId: String)
GET     /target/list/:graphId       com.lucidchart.open.nark.controllers.TargetsController.list(graphId: String)
GET     /target/toggle/:uuid        com.lucidchart.open.nark.controllers.TargetsController.toggleActivation(uuid: String)

# Map static resources from the /public folder to the /assets URL path
GET     /favicon.ico                controllers.Assets.at(path="/public", file = "img/favicon.png")
GET     /assets/*file               controllers.Assets.at(path="/public", file)
